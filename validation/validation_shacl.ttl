@prefix validation: <https://github.com/GAIA-X4PLC-AAD/ontology-management-base/tree/main/validation/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

validation:ValidationShape a sh:NodeShape ;
    sh:closed false ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property [ sh:datatype xsd:anyURI ;
            skos:example "ipfs://1234567890ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890" ;
            skos:example "https://raw.githubusercontent.com/my-repo/myReport.xqar" ;
            skos:example "./validation/report.xqar" ;
            sh:message "Validation of report location failed!"@en ;
            sh:description "The link to the validation report as URL or DID." ;
            sh:name "Validation Report Location"@en ;
            sh:order 0 ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:path validation:validationReport ],
        [ sh:datatype xsd:string ;
            skos:example "QualityChecker v0.0.1 with CheckerBundle qc-openscenarioxml v0.0.1 and qc-opendrive v0.0.1" ;
            sh:message "Validation of the type failed!"@en ;
            sh:description "The type of the validation report." ;
            sh:name "Validation Report Type"@en ;
            sh:order 1 ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:path validation:reportType ],
        [ sh:datatype xsd:string ;
            skos:example "self-provided" ;
            sh:message "Validation of the source failed!"@en ;
            sh:description "The source of the validation report. E.g. if the report was generated by the asset provided or external sources." ;
            sh:name "Validation Report Source Type"@en ;
            sh:in ("self-provided" "market-place" "service-provider") ;
            sh:order 2 ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:path validation:sourceType ],
        [ sh:node validation:ValidationResultShape ;
            skos:example "self-provided" ;
            sh:message "Validation of the report result failed!"@en ;
            sh:description "The results of the validation result." ;
            sh:name "Validation Report Result"@en ;
            sh:order 3 ;
            sh:path validation:results ] ;
    sh:targetClass validation:Validation .

validation:ValidationResultShape a sh:NodeShape ;
    sh:closed false ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property [ sh:datatype xsd:string ;
            skos:example "check_asam_xosc_xml_valid_xml_document" ;
            sh:message "Validation of the valdiationName failed!"@en ;
            sh:description "The name of the validation task/check performed." ;
            sh:name "Validation Name"@en ;
            sh:order 0 ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:path validation:valdiationName ],
        [ sh:datatype xsd:string ;
            skos:example "PASSED" ;
            sh:message "Validation of the validationResult!"@en ;
            sh:description "The result of the validation task/check." ;
            sh:name "Validation Result"@en ;
            sh:in ("PASSED" "FAILED") ;
            sh:order 1 ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:path validation:validationResult ],
        [ sh:datatype xsd:string ;
            skos:example "WARNING" ;
            sh:message "Validation of the severity!"@en ;
            sh:description "The severity of the validation task/check if failed." ;
            sh:name "Validation Result"@en ;
            sh:in ("INFORMATION" "WARNING" "ERROR") ;
            sh:order 2 ;
            sh:maxCount 1 ;
            sh:minCount 0 ;
            sh:path validation:severity ] ;
    sh:targetClass validation:ValidationResult .