@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix surface-model: <https://github.com/GAIA-X4PLC-AAD/ontology-management-base/tree/main/surface-model/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix gx: <https://registry.lab.gaia-x.eu/development/api/trusted-shape-registry/v1/shapes/jsonld/trustframework#> .

surface-model:surfaceModelShape a sh:NodeShape ;
    sh:property [ sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:node surface-model:FormatShape ;
            sh:order 2 ;
            sh:path surface-model:Format ],
        [ sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:node surface-model:DataShape ;
            sh:order 3 ;
            sh:path surface-model:Data ],
        [ sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:node surface-model:QualityShape ;
            sh:order 1 ;
            sh:path surface-model:Quality ],
        [ sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:node surface-model:QuantityShape ;
            sh:order 0 ;
            sh:path surface-model:Quantity ],
        [ sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:node surface-model:GeoreferenceShape ;
            sh:order 7 ;
            sh:path surface-model:Georeference ] ;
    sh:targetClass surface-model:surface-model .

surface-model:GeoreferenceShape a sh:NodeShape ;
    sh:property [ sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:node surface-model:ProjectLocationShape ;
            sh:order 0 ;
            sh:path surface-model:ProjectLocation ],
        [ sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:node surface-model:GeodeticReferenceSystemShape ;
            sh:order 1 ;
            sh:path surface-model:GeodeticReferenceSystem ] ;
    sh:targetClass surface-model:georeference .

surface-model:GeodeticReferenceSystemShape a sh:NodeShape ;
    sh:property [ skos:example "Lat: 1.234; Lon 45.23" ;
            sh:description "World coordinates of map origin"@en ;
            sh:message "Validation of origin failed!"@en ;
            sh:name "origin"@en ;
            sh:node surface-model:Coordinate2DShape ;
            sh:minCount 1 ;
            sh:maxCount 1 ;
            sh:order 2 ;
            sh:path surface-model:origin ],
        [ skos:example "EPSG 32632" ;
            sh:datatype xsd:string ;
            sh:description "EPSG code of the map"@en ;
            sh:maxCount 1 ;
            sh:message "Validation of coordinateSystem failed!"@en ;
            sh:name "coordinateSystem"@en ;
            sh:order 0 ;
            sh:path surface-model:coordinateSystem ],
        [ skos:example "EPSG xyz" ;
            sh:datatype xsd:string ;
            sh:description "Ellipsodial height or orthometric height"@en ;
            sh:maxCount 1 ;
            sh:message "Validation of heightSystem failed!"@en ;
            sh:name "heightSystem"@en ;
            sh:order 1 ;
            sh:path surface-model:heightSystem ] ;
    sh:targetClass surface-model:GeodeticReferenceSystem .

surface-model:BoundingBoxShape a sh:NodeShape ;
    sh:property [ sh:datatype xsd:float ;
            sh:message "Validation of yMin failed!"@en ;
            sh:name "yMin"@en ;
            sh:maxCount 1 ;
            sh:order 1 ;
            sh:path surface-model:yMin ],
        [ sh:datatype xsd:float ;
            sh:message "Validation of yMax failed!"@en ;
            sh:name "yMax"@en ;
            sh:maxCount 1 ;
            sh:order 3 ;
            sh:path surface-model:yMax ],
        [ sh:datatype xsd:float ;
            sh:message "Validation of xMin failed!"@en ;
            sh:name "xMin"@en ;
            sh:maxCount 1 ;
            sh:order 0 ;
            sh:path surface-model:xMin ],
        [ sh:datatype xsd:float ;
            sh:message "Validation of xMax failed!"@en ;
            sh:name "xMax"@en ;
            sh:maxCount 1 ;
            sh:order 2 ;
            sh:path surface-model:xMax ] ;
    sh:targetClass surface-model:BoundingBox .

surface-model:Coordinate2DShape a sh:NodeShape ;
    sh:property [ sh:datatype xsd:float ;
            sh:message "Validation of x failed!"@en ;
            sh:name "x"@en ;
            sh:maxCount 1 ;
            sh:order 0 ;
            sh:path surface-model:x ],
        [ sh:datatype xsd:float ;
            sh:message "Validation of y failed!"@en ;
            sh:name "y"@en ;
            sh:maxCount 1 ;
            sh:order 1 ;
            sh:path surface-model:y ] ;
    sh:targetClass surface-model:Coordinate2D .
    
surface-model:ProjectLocationShape a sh:NodeShape ;
    sh:property [ skos:example "nan" ;
            sh:datatype xsd:string ;
            sh:description "State of project area"@en ;
            sh:message "Validation of state failed!"@en ;
            sh:maxCount 1 ;
            sh:name "state"@en ;
            sh:order 1 ;
            sh:path surface-model:state ],
        [ skos:example "nan" ;
            sh:datatype xsd:string ;
            sh:description "nan"@en ;
            sh:message "Validation of city failed!"@en ;
            sh:maxCount 1 ;
            sh:name "city"@en ;
            sh:order 3 ;
            sh:path surface-model:city ],
        [ skos:example "nan" ;
            sh:datatype xsd:string ;
            sh:description "Region of project area"@en ;
            sh:message "Validation of region failed!"@en ;
            sh:maxCount 1 ;
            sh:name "region"@en ;
            sh:order 2 ;
            sh:path surface-model:region ],
        [ skos:example "Germany, GER" ;
            sh:datatype xsd:string ;
            sh:description "Country code as ISO 3166-1, alpha-2; "@en ;
            sh:maxCount 1 ;
            sh:message "Validation of country failed!"@en ;
            sh:name "country"@en ;
            sh:order 0 ;
            sh:path surface-model:country ;
            sh:pattern "^[a-zA-Z]{2}-(?:[a-zA-Z]{1,3}|[0-9]{1,3})$" ],
        [ skos:example "Lat: 1.234- 1.345; Lon 45.23-45.34" ;
            sh:description "Bounding box with lat/lon values in WGS84"@en ;
            sh:message "Validation of boundingBox failed!"@en ;
            sh:name "boundingBox"@en ;
            sh:node surface-model:BoundingBoxShape ;
            sh:minCount 1 ;
            sh:maxCount 1 ;
            sh:order 5 ;
            sh:path surface-model:boundingBox ],
        [ skos:example "Autobahn A8, Groﬂraum Ingolstadt" ;
            sh:datatype xsd:string ;
            sh:description "Description of the location, dependen if it is a more trajectory style data or area style data"@en ;
            sh:message "Validation of relationOrArea failed!"@en ;
            sh:maxCount 1 ;
            sh:name "relationOrArea"@en ;
            sh:order 4 ;
            sh:path surface-model:relationOrArea ] ;
    sh:targetClass surface-model:ProjectLocation .  

surface-model:DataShape a sh:NodeShape ;
    sh:property [ skos:example "nan" ;
            sh:datatype xsd:string ;
            sh:description "Height, friction values, grey values"@en ;
            sh:maxCount 1 ;
            sh:message "Validation of type failed!"@en ;
            sh:name "type"@en ;
            sh:order 0 ;
            sh:path surface-model:type ] ;
    sh:targetClass surface-model:Data .

surface-model:FormatShape a sh:NodeShape ;
    sh:property [ skos:example "ASAM OpenCRG; DLM" ;
            sh:datatype xsd:string ;
            sh:description "Format type definition"@en ;
            sh:in ("ASAM OpenCRG" "DLM") ;
            sh:maxCount 1 ;
            sh:message "Validation of type failed!"@en ;
            sh:name "type"@en ;
            sh:order 0 ;
            sh:path surface-model:type ],
        [ skos:example "1.5" ;
            sh:datatype xsd:string ;
            sh:description "Version of data format"@en ;
            sh:maxCount 1 ;
            sh:message "Validation of version failed!"@en ;
            sh:name "version"@en ;
            sh:order 1 ;
            sh:path surface-model:version ] ;
    sh:targetClass surface-model:Format .

surface-model:QualityShape a sh:NodeShape ;
    sh:property [ skos:example "0.01" ;
            sh:datatype xsd:float ;
            sh:description "Longitudinal resolution "@en ;
            sh:maxCount 1 ;
            sh:message "Validation of resolutionLongitudinal failed!"@en ;
            sh:name "resolutionLongitudinal"@en ;
            sh:order 0 ;
            sh:path surface-model:resolutionLongitudinal ],
        [ skos:example "-3,14159" ;
            sh:datatype xsd:float ;
            sh:description "Heading at starting position"@en ;
            sh:maxCount 1 ;
            sh:message "Validation of orientation failed!"@en ;
            sh:name "orientation"@en ;
            sh:order 2 ;
            sh:path surface-model:orientation ],
        [ skos:example "true" ;
            sh:datatype xsd:boolean ;
            sh:description "Existence of horizontal starting platform"@en ;
            sh:maxCount 1 ;
            sh:message "Validation of platform failed!"@en ;
            sh:name "platform"@en ;
            sh:order 3 ;
            sh:path surface-model:platform ],
        [ skos:example "0.01" ;
            sh:datatype xsd:float ;
            sh:description "Lateral resolutions"@en ;
            sh:maxCount 1 ;
            sh:message "Validation of resolutionLateral failed!"@en ;
            sh:name "resolutionLateral"@en ;
            sh:order 1 ;
            sh:path surface-model:resolutionLateral ],
        [ skos:example "true" ;
            sh:datatype xsd:boolean ;
            sh:description "Existence of smooth ramp from platform to road"@en ;
            sh:maxCount 1 ;
            sh:message "Validation of ramp failed!"@en ;
            sh:name "ramp"@en ;
            sh:order 4 ;
            sh:path surface-model:ramp ] ;
    sh:targetClass surface-model:Quality .

surface-model:QuantityShape a sh:NodeShape ;
    sh:property [ skos:example "yes" ;
            sh:datatype xsd:boolean ;
            sh:description "Is projection system provided within the dataset"@en ;
            sh:maxCount 1 ;
            sh:message "Validation of mapDataField failed!"@en ;
            sh:name "mapDataField"@en ;
            sh:order 2 ;
            sh:path surface-model:mapDataField ],
        [ skos:example "25" ;
            sh:datatype xsd:float ;
            sh:description "Range of elevation values"@en ;
            sh:maxCount 1 ;
            sh:message "Validation of elevationRange failed!"@en ;
            sh:minCount 0 ;
            sh:name "elevationRange"@en ;
            sh:order 1 ;
            sh:path surface-model:elevationRange ],
        [ skos:example "1.46" ;
            sh:datatype xsd:float ;
            sh:description "Road network length in km"@en ;
            sh:maxCount 1 ;
            sh:message "Validation of length failed!"@en ;
            sh:name "length"@en ;
            sh:order 0 ;
            sh:path surface-model:length ] ;
    sh:targetClass surface-model:Quantity .

