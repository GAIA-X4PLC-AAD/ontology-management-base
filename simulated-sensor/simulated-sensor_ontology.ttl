@prefix simulated-sensor: <https://ontologies.envited-x.net/simulated-sensor/v2/ontology#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix org: <http://www.w3.org/ns/org#> .
@prefix prov: <http://www.w3.org/ns/prov#> .
@prefix gx: <https://w3id.org/gaia-x/development/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix openlabel: <https://openlabel.asam.net/V1-0-0/ontologies/> .

simulated-sensor: a owl:Ontology ;
    rdfs:label "Ontology definition for simulated-sensor"@en ;
    rdfs:comment "An ontology with common classes to describe a simulated sensor."@en ;
    
    dcterms:creator "The GAIA-X 4 PLC AAD Project Team"@en ;
    dcterms:contributor [
        a foaf:Person ;
        foaf:name "Rhea C. Rinaldo" ;
        org:memberOf <https://iqz-wuppertal.de/> ;
    ] , [
        a foaf:Person ;
        foaf:name "Aaron Blickle" ;
        org:memberOf <https://iqz-wuppertal.de/> ;
    ] , [
        a foaf:Person ;
        foaf:name "Johannes Heinrich" ;
        org:memberOf <https://iqz-wuppertal.de/> ;
    ] ;  

    # Permanent identifier for the ontology
    dcterms:identifier <https://ontologies.envited-x.net/simulated-sensor> ;

    # GitHub repository
    dcterms:source <https://github.com/GAIA-X4PLC-AAD/ontology-management-base> ;

    # Versioning
    owl:versionIRI <https://ontologies.envited-x.net/simulated-sensor/v2/ontology#> ;
    owl:versionInfo "v2" ;

    # Reference to SHACL validation rules
    dcterms:conformsTo <https://ontologies.envited-x.net/simulated-sensor/v2/shape#> ;

    # Additional references
    dcterms:references <https://w3id.org/gaia-x/development/> ;
    rdfs:seeAlso <https://github.com/GAIA-X4PLC-AAD/ontology-management-base/blob/main/README.md> .

# --- Classes ---

simulated-sensor:SimulatedSensor a owl:Class ;
    rdfs:label "Class definition for SimulatedSensor"@en ; 
    rdfs:comment "A sensor in an automotive driving simulator."@en ;
    rdfs:subClassOf gx:DataResource .

simulated-sensor:Radar a owl:Class ;
    rdfs:label "Class definition for Radar"@en ; 
    rdfs:comment "A simulated RADAR sensor in an automotive driving simulator."@en .

simulated-sensor:Lidar a owl:Class ;
    rdfs:label "Class definition for Lidar"@en ; 
    rdfs:comment "A simulated LIDAR sensor in an automotive driving simulator."@en .

simulated-sensor:Camera a owl:Class ;
    rdfs:label "Class definition for Camera"@en ; 
    rdfs:comment "A simulated CAMERA sensor in an automotive driving simulator."@en .

simulated-sensor:FieldOfView a owl:Class ;
    rdfs:label "Class definition for FieldOfView"@en ; 
    rdfs:comment "A Field of View (FoV) of a perception sensor as float angles in an automotive driving simulator."@en .

# --- Object Properties ---

simulated-sensor:sensorType a owl:ObjectProperty ;
    rdfs:label "sensor type"@en ;
    rdfs:comment "The specific type/configuration of the sensor (e.g. Radar, Lidar, Camera)."@en ;
    rdfs:domain simulated-sensor:SimulatedSensor ;
    rdfs:range [
        a owl:Class ;
        owl:unionOf (simulated-sensor:Radar simulated-sensor:Lidar simulated-sensor:Camera)
    ] .

simulated-sensor:fieldOfView a owl:ObjectProperty ;
    rdfs:label "field of view"@en ;
    rdfs:comment "Field of view angles."@en ;
    rdfs:range simulated-sensor:FieldOfView .

# --- Datatype Properties ---

simulated-sensor:sensorIdentifier a owl:DatatypeProperty ;
    rdfs:label "sensor identifier"@en ;
    rdfs:comment "Name/Identifier of the sensor in the simulator."@en ;
    rdfs:domain simulated-sensor:SimulatedSensor ;
    rdfs:range xsd:string .

simulated-sensor:mountingPosition a owl:DatatypeProperty ;
    rdfs:label "mounting position"@en ;
    rdfs:comment "Possible mounting positions of the sensor."@en ;
    rdfs:domain simulated-sensor:SimulatedSensor ;
    rdfs:range xsd:string .

simulated-sensor:numberOfBeams a owl:DatatypeProperty ;
    rdfs:label "number of beams"@en ;
    rdfs:comment "Number of beams sent by the sensor."@en ;
    rdfs:range xsd:integer .

simulated-sensor:distance a owl:DatatypeProperty ;
    rdfs:label "distance"@en ;
    rdfs:comment "Covered distance or range in metres."@en ;
    rdfs:range xsd:float .

simulated-sensor:rgbFlag a owl:DatatypeProperty ;
    rdfs:label "RGB flag"@en ;
    rdfs:comment "If true, camera is RGB camera."@en ;
    rdfs:domain simulated-sensor:Camera ;
    rdfs:range xsd:boolean .

simulated-sensor:flag3D a owl:DatatypeProperty ;
    rdfs:label "3D flag"@en ;
    rdfs:comment "If true, camera is 3D camera."@en ;
    rdfs:domain simulated-sensor:Camera ;
    rdfs:range xsd:boolean .

simulated-sensor:depthFlag a owl:DatatypeProperty ;
    rdfs:label "depth flag"@en ;
    rdfs:comment "If true, camera is depth camera."@en ;
    rdfs:domain simulated-sensor:Camera ;
    rdfs:range xsd:boolean .

simulated-sensor:fovAngle1 a owl:DatatypeProperty ;
    rdfs:label "FoV angle 1"@en ;
    rdfs:comment "FoV angle 1 (mandatory if FoV attribute is used)."@en ;
    rdfs:domain simulated-sensor:FieldOfView ;
    rdfs:range xsd:float .

simulated-sensor:fovAngle2 a owl:DatatypeProperty ;
    rdfs:label "FoV angle 2"@en ;
    rdfs:comment "FoV angle 2 (optional)."@en ;
    rdfs:domain simulated-sensor:FieldOfView ;
    rdfs:range xsd:float .

simulated-sensor:fovAngle3 a owl:DatatypeProperty ;
    rdfs:label "FoV angle 3"@en ;
    rdfs:comment "FoV angle 3 (optional)."@en ;
    rdfs:domain simulated-sensor:FieldOfView ;
    rdfs:range xsd:float .
