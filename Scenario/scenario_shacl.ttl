@prefix scenario: <https://github.com/GAIA-X4PLC-AAD/ontology-management-base/tree/main/scenario/> .
@prefix gx: <https://registry.lab.gaia-x.eu/development/api/trusted-shape-registry/v1/shapes/jsonld/trustframework#> .
@prefix georeference: <https://github.com/GAIA-X4PLC-AAD/ontology-management-base/tree/main/georeference/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

scenario:scenarioShape a sh:NodeShape ;
    sh:property [ sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:node scenario:EnvironmentalShape ;
            sh:order 2 ;
            sh:path scenario:Environmental ],
        [ sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:node scenario:GeneralShape ;
            sh:order 0 ;
            sh:path scenario:General ],
        [ sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:node scenario:Data_SourcesShape ;
            sh:order 6 ;
            sh:path scenario:Data_Sources ],
        [ sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:node scenario:StructuralShape ;
            sh:order 4 ;
            sh:path scenario:Structural ],
        [ sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:node scenario:TrafficShape ;
            sh:order 3 ;
            sh:path scenario:Traffic ],
        [ sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:node scenario:ParticipantsShape ;
            sh:order 1 ;
            sh:path scenario:Participants ],
        [ sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:node scenario:FormatShape ;
            sh:order 5 ;
            sh:path scenario:Format ],
        [ sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:node georeference:GeoreferenceShape ;
            sh:order 7 ;
            sh:path georeference:Georeference ] ;
    sh:targetClass scenario:scenario .

georeference:GeoreferenceShape a sh:NodeShape ;
    sh:property [ sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:node georeference:ProjectLocationShape ;
            sh:order 0 ;
            sh:path georeference:ProjectLocation ],
        [ sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:node georeference:GeodeticReferenceSystemShape ;
            sh:order 1 ;
            sh:path georeference:GeodeticReferenceSystem ] ;
    sh:targetClass georeference:georeference .

georeference:GeodeticReferenceSystemShape a sh:NodeShape ;
    sh:property [ skos:example "Lat: 1.234; Lon 45.23" ;
            sh:description "World coordinates of map origin"@en ;
            sh:message "Validation of origin failed!"@en ;
            sh:name "origin"@en ;
            sh:node georeference:Coordinate2DShape ;
            sh:minCount 1 ;
            sh:maxCount 1 ;
            sh:order 2 ;
            sh:path georeference:origin ],
        [ skos:example "EPSG 32632" ;
            sh:datatype xsd:string ;
            sh:description "EPSG code of the map"@en ;
            sh:in ("EPSG 32632" "EPSG:4326" "EPSG:3857" "EPSG:7789") ;
            sh:maxCount 1 ;
            sh:message "Validation of coordinateSystem failed!"@en ;
            sh:name "coordinateSystem"@en ;
            sh:order 0 ;
            sh:path georeference:coordinateSystem ],
        [ skos:example "EPSG xyz" ;
            sh:datatype xsd:string ;
            sh:description "Ellipsodial height or orthometric height"@en ;
            sh:maxCount 1 ;
            sh:message "Validation of heightSystem failed!"@en ;
            sh:name "heightSystem"@en ;
            sh:order 1 ;
            sh:path georeference:heightSystem ] ;
    sh:targetClass georeference:GeodeticReferenceSystem .

georeference:BoundingBoxShape a sh:NodeShape ;
    sh:property [ sh:datatype xsd:float ;
            sh:message "Validation of yMin failed!"@en ;
            sh:name "yMin"@en ;
            sh:maxCount 1 ;
            sh:order 1 ;
            sh:path georeference:yMin ],
        [ sh:datatype xsd:float ;
            sh:message "Validation of yMax failed!"@en ;
            sh:name "yMax"@en ;
            sh:maxCount 1 ;
            sh:order 3 ;
            sh:path georeference:yMax ],
        [ sh:datatype xsd:float ;
            sh:message "Validation of xMin failed!"@en ;
            sh:name "xMin"@en ;
            sh:maxCount 1 ;
            sh:order 0 ;
            sh:path georeference:xMin ],
        [ sh:datatype xsd:float ;
            sh:message "Validation of xMax failed!"@en ;
            sh:name "xMax"@en ;
            sh:maxCount 1 ;
            sh:order 2 ;
            sh:path georeference:xMax ] ;
    sh:targetClass georeference:BoundingBox .

georeference:Coordinate2DShape a sh:NodeShape ;
    sh:property [ sh:datatype xsd:float ;
            sh:message "Validation of x failed!"@en ;
            sh:name "x"@en ;
            sh:maxCount 1 ;
            sh:order 0 ;
            sh:path georeference:x ],
        [ sh:datatype xsd:float ;
            sh:message "Validation of y failed!"@en ;
            sh:name "y"@en ;
            sh:maxCount 1 ;
            sh:order 1 ;
            sh:path georeference:y ] ;
    sh:targetClass georeference:Coordinate2D .
    
georeference:ProjectLocationShape a sh:NodeShape ;
    sh:property [ skos:example "nan" ;
            sh:datatype xsd:string ;
            sh:description "State of project area"@en ;
            sh:message "Validation of state failed!"@en ;
            sh:maxCount 1 ;
            sh:name "state"@en ;
            sh:order 1 ;
            sh:path georeference:state ],
        [ skos:example "nan" ;
            sh:datatype xsd:string ;
            sh:description "nan"@en ;
            sh:message "Validation of city failed!"@en ;
            sh:maxCount 1 ;
            sh:name "city"@en ;
            sh:order 3 ;
            sh:path georeference:city ],
        [ skos:example "nan" ;
            sh:datatype xsd:string ;
            sh:description "Region of project area"@en ;
            sh:message "Validation of region failed!"@en ;
            sh:maxCount 1 ;
            sh:name "region"@en ;
            sh:order 2 ;
            sh:path georeference:region ],
        [ skos:example "Germany, GER" ;
            sh:datatype xsd:string ;
            sh:description "Country code as ISO 3166-1, alpha-2; "@en ;
            sh:maxCount 1 ;
            sh:message "Validation of country failed!"@en ;
            sh:name "country"@en ;
            sh:order 0 ;
            sh:path georeference:country ;
            sh:pattern "^[a-zA-Z]{2}-(?:[a-zA-Z]{1,3}|[0-9]{1,3})$" ],
        [ skos:example "Lat: 1.234- 1.345; Lon 45.23-45.34" ;
            sh:description "Bounding box with lat/lon values in WGS84"@en ;
            sh:message "Validation of boundingBox failed!"@en ;
            sh:name "boundingBox"@en ;
            sh:node georeference:BoundingBoxShape ;
            sh:minCount 1 ;
            sh:maxCount 1 ;
            sh:order 5 ;
            sh:path georeference:boundingBox ],
        [ skos:example "Autobahn A8, Gro√üraum Ingolstadt" ;
            sh:datatype xsd:string ;
            sh:description "Description of the location, dependen if it is a more trajectory style data or area style data"@en ;
            sh:message "Validation of relationOrArea failed!"@en ;
            sh:maxCount 1 ;
            sh:name "relationOrArea"@en ;
            sh:order 4 ;
            sh:path georeference:relationOrArea ] ;
    sh:targetClass georeference:ProjectLocation .      

scenario:DataSourcesShape a sh:NodeShape ;
    sh:property [ skos:example "captured reality, synthetic" ;
            sh:datatype xsd:string ;
            sh:description "Capture type"@en ;
            sh:maxCount 1 ;
            sh:message "Validation of source failed!"@en ;
            sh:minCount 0 ;
            sh:name "source"@en ;
            sh:order 0 ;
            sh:path scenario:source ] ;
    sh:targetClass scenario:DataSourcesShape .

scenario:EnvironmentalShape a sh:NodeShape ;
    sh:property [ skos:example "194.01" ;
            sh:datatype xsd:float ;
            sh:description "Azimuth of the sun"@en ;
            sh:message "Validation of sunAzimuth failed!"@en ;
            sh:minCount 0 ;
            sh:name "sunAzimuth"@en ;
            sh:order 2 ;
            sh:path scenario:sunAzimuth ] ;
    sh:targetClass scenario:Environmental .

scenario:FormatShape a sh:NodeShape ;
    sh:property [ skos:example "ASAM OpenSCENARIO" ;
            sh:datatype xsd:string ;
            sh:description "Format type definition"@en ;
            sh:in ("ASAM OpenSCENARIO") ;
            sh:maxCount 1 ;
            sh:message "Validation of type failed!"@en ;
            sh:name "type"@en ;
            sh:order 0 ;
            sh:path scenario:type ],
        [ skos:example "1.5" ;
            sh:datatype xsd:string ;
            sh:description "Version of data format"@en ;
            sh:maxCount 1 ;
            sh:message "Validation of version failed!"@en ;
            sh:name "version"@en ;
            sh:order 1 ;
            sh:path scenario:version ] ;
    sh:targetClass scenario:Format .

scenario:GeneralShape a sh:NodeShape ;
    sh:property [ skos:example "Functional, Logical, Concrete" ;
            sh:datatype xsd:string ;
            sh:description "Pegasus type of scenario"@en ;
            sh:in ("Functional" "Logical" "Concrete") ;
            sh:maxCount 1 ;
            sh:message "Validation of type failed!"@en ;
            sh:name "type"@en ;
            sh:order 0 ;
            sh:path scenario:type ],
        [ skos:example "2009-06-30T18:30:00+02:00	" ;
            sh:datatype xsd:dateTime ;
            sh:description "Time of the scenario if applicaple. Either time of recording or if synthetic the time it happens."@en ;
            sh:maxCount 1 ;
            sh:message "Validation of timeDate failed!"@en ;
            sh:minCount 0 ;
            sh:name "timeDate"@en ;
            sh:order 2 ;
            sh:path scenario:timeDate ],
        [ skos:example "criticality analysis, testing, specific component test (e.g. lateral movement control)" ;
            sh:datatype xsd:string ;
            sh:description "Purpose of this scenario."@en ;
            sh:maxCount 1 ;
            sh:message "Validation of aim failed!"@en ;
            sh:minCount 0 ;
            sh:name "aim"@en ;
            sh:order 4 ;
            sh:path scenario:aim ],
        [ skos:example "global positions, parameter declaration..." ;
            sh:datatype xsd:string ;
            sh:description " Use of the functionalities from the standard. E.g. which Actions are used."@en ;
            sh:maxCount 1 ;
            sh:message "Validation of usedStandardFunctions failed!"@en ;
            sh:minCount 0 ;
            sh:name "usedStandardFunctions"@en ;
            sh:order 3 ;
            sh:path scenario:usedStandardFunctions ] ;
    sh:targetClass scenario:General .

scenario:ParticipantsShape a sh:NodeShape ;
    sh:property [ skos:example "2" ;
            sh:datatype xsd:unsignedInt ;
            sh:description "Count of traffic temporary objects"@en ;
            sh:maxCount 1 ;
            sh:message "Validation of temporaryTrafficObjects failed!"@en ;
            sh:name "temporaryTrafficObjects"@en ;
            sh:order 1 ;
            sh:path scenario:temporaryTrafficObjects ],
        [ skos:example "10" ;
            sh:datatype xsd:unsignedInt ;
            sh:description "Count of traffic objects"@en ;
            sh:maxCount 1 ;
            sh:message "Validation of numberTrafficObjects failed!"@en ;
            sh:name "numberTrafficObjects"@en ;
            sh:order 0 ;
            sh:path scenario:numberTrafficObjects ],
        [ skos:example "myDriver, BestPedestrianController2000" ;
            sh:datatype xsd:string ;
            sh:description "Usage of simulation Core internal or external controllers."@en ;
            sh:message "Validation of controllers failed!"@en ;
            sh:minCount 0 ;
            sh:name "controllers"@en ;
            sh:order 5 ;
            sh:path scenario:controllers ],
        [ skos:example "8" ;
            sh:datatype xsd:unsignedInt ;
            sh:description "Count of traffic permanent objects"@en ;
            sh:maxCount 1 ;
            sh:message "Validation of permanentTrafficObjects failed!"@en ;
            sh:name "permanentTrafficObjects"@en ;
            sh:order 2 ;
            sh:path scenario:permanentTrafficObjects ],
        [ skos:example "via trajectory, via support points" ;
            sh:datatype xsd:string ;
            sh:description "Type of movement used by traffic participants according to the OpenSCENARIO standard."@en ;
            sh:maxCount 1 ;
            sh:message "Validation of movementDescription failed!"@en ;
            sh:name "movementDescription"@en ;
            sh:order 4 ;
            sh:path scenario:movementDescription ],
        [ skos:example "stopIfTTCLowerThan" ;
            sh:datatype xsd:string ;
            sh:description "Scenario/domain specific commands or actions"@en ;
            sh:maxCount 1 ;
            sh:message "Validation of customCommands failed!"@en ;
            sh:minCount 0 ;
            sh:name "customCommands"@en ;
            sh:order 6 ;
            sh:path scenario:customCommands ] ;
    sh:targetClass scenario:Participants .

scenario:StructuralShape a sh:NodeShape ;
    sh:property [ skos:example "http://mywebsite.de/Catalogs" ;
            sh:description "Link to Catalogs"@en ;
            sh:message "Validation of catalogs failed!"@en ;
            sh:minCount 0 ;
            sh:name "catalogs"@en ;
            sh:node scenario:LinkShape ;
            sh:order 0 ;
            sh:path scenario:catalogs ],
        [ skos:example "http://mywebsite.de/myModel.fbx" ;
            sh:description "Link to 3D models"@en ;
            sh:message "Validation of 3dModels failed!"@en ;
            sh:minCount 0 ;
            sh:name "3dModels"@en ;
            sh:node scenario:LinkShape ;
            sh:order 1 ;
            sh:path scenario:3dModels ],
        [ skos:example "http://mywebsite.de/map.xodr" ;
            sh:description "Link to traffic space"@en ;
            sh:maxCount 1 ;
            sh:message "Validation of trafficSpace failed!"@en ;
            sh:minCount 0 ;
            sh:name "trafficSpace"@en ;
            sh:node scenario:LinkShape ;
            sh:order 2 ;
            sh:path scenario:trafficSpace ] ;
    sh:targetClass scenario:Structural .

scenario:TrafficShape a sh:NodeShape ;
    sh:property [ skos:example "kangaroo crossing" ;
            sh:datatype xsd:string ;
            sh:description "Country specific traffic signs"@en ;
            sh:maxCount 1 ;
            sh:message "Validation of countrySpecificSign failed!"@en ;
            sh:minCount 0 ;
            sh:name "countrySpecificSign"@en ;
            sh:order 3 ;
            sh:path scenario:countrySpecificSign ],
        [ skos:example "tuk tuk" ;
            sh:datatype xsd:string ;
            sh:description "Country specific traffic participants"@en ;
            sh:maxCount 1 ;
            sh:message "Validation of countrySpecificTP failed!"@en ;
            sh:minCount 0 ;
            sh:name "countrySpecificTP"@en ;
            sh:order 2 ;
            sh:path scenario:countrySpecificTP ],
        [ skos:example "germany, not applicable" ;
            sh:datatype xsd:string ;
            sh:description "Country where this scenario is from"@en ;
            sh:maxCount 1 ;
            sh:message "Validation of country failed!"@en ;
            sh:minCount 0 ;
            sh:name "country"@en ;
            sh:order 0 ;
            sh:path scenario:country ] ;
    sh:targetClass scenario:Traffic .

scenario:LinkShape a sh:NodeShape ;
    sh:property [ sh:datatype xsd:anyURI ;
            sh:message "Validation of url failed!"@en ;
            sh:name "url"@en ;
            sh:order 0 ;
            sh:path scenario:url ],
        [ sh:datatype xsd:string ;
            sh:in ("Document" "Image" "Model" "Routing" "Video") ;
            sh:message "Validation of type failed!"@en ;
            sh:name "type"@en ;
            sh:order 1 ;
            sh:path scenario:type ] ;
    sh:targetClass scenario:Link .

